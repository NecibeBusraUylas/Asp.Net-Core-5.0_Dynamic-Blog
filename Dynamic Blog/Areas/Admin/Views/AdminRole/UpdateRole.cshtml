@model DynamicBlog.Models.RoleUpdateViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<br />
<form method="post">
    <div class="form-group">
        <label>Role Id</label>
        <input asp-for="Id" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rolün Adı</label>
        <input asp-for="Name" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <button class="btn-warning">Kaydet</button>
</form>
@using EntityLayer.Concrete
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Roller</h1>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol İsmi</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-warning">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/AdminRole/AddRole" class="btn btn-primary">Yeni Rol Ekle</a>
                <a href="/Admin/AdminRole/UserRoleList" class="btn btn-primary" style="float:right">Kullanıcı Rol Listesi</a>
            </div>
        </div>
    </div>
</div>
@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
 
<h1>Bloglar</h1>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            <img src="@item.BlogImage" class="col-sm-12">
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                @item.BlogCreationDate.ToShortDateString()
                            </span>
                            <small class="text-muted">@item.Category.CategoryName</small>
                            <a href="#" class="product-name"> @item.BlogTitle</a>
                            <div class="small m-t-xs">
                                @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 130).LastIndexOf(" "))...
                            </div>
                            <div class="m-t text-righ">
                                <a href="/Blog/BlogDetails/@item.BlogId" target="_blank" class="btn btn-xs btn-outline btn-primary">Devamını Oku... <i class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form class="form-group" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @id = "validationDefault01", @placeholder = "Adınızı giriniz.", @required = "" })
                            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                            @*<input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Mail Adresi</label>
                            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @id = "validationDefault02", @placeholder = "E-mail adresinizi giriniz", @required = "" })
                            @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                            @*<input type="email" class="form-control" id="validationDefault02" placeholder="" name="WriterMail" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola</label>
                            @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control", @id = "password1", @placeholder = "Parolanızı giriniz", @required = "" })
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                            @*<input type="password" class="form-control" id="password1" name="WriterPassword" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Parolanızı Tekrar Giriniz</label>
                            @Html.Password("passwordAgain", "", new { @class = "form-control", @id = "password2", @placeholder = "Parolanızı tekrar giriniz", @required = "" })
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                            @*<input type="password" class="form-control" id="password2" name="PasswordAgain" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            @*<label for="exampleInputPassword2 mb-2">Şehir</label>*@
                            <label for="validationCustom01 mb-2">Şehir</label>
                            @Html.DropDownListFor(x => x.WriterCity, (List<SelectListItem>)ViewBag.Cities, "", new { @class = "form-control dropdown" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="validationCustom01 mb-2">Resim</label>
                            @*@Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control", @id = "imageLink", @placeholder = "Profil fotoğrafınız için link giriniz.", @required = "" })*@
                            <input type="file" class="form-control-file" id="imageLink" name="imageFile" placeholder="" required="">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="validationCustom01 mb-2">Hakkınızda</label>
                                @Html.TextAreaFor(x => x.WriterAbout, 15, 4, new { @class = "form-control", @placeholder = "Hakkınızda" })
                            </div>
                        </div>
                        @Html.ValidationMessage("ErrorMessage", "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <br />
    <script>
        $('#btn1').click(function () {
            swal("Kullanıcı Kabul Şartları", "Sitemize verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsüne takılmadan gönerilmeye devam edilecektir. Eğer e-posta bülteninden çıkmak isterseniz mail ileti dizisini durdurabilirsiniz. Parolanızı ve mail adresi bilgileriniz şifrelenmiş halde veri tabanımızda saklanmaktadır. ");
        });
    </script>
</section>

@model DynamicBlog.Models.UserUpdateViewModel

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                <br />
                <form class="form-group" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputName1">Adınız Soyadınız</label>
                        <input type="text" asp-for="@Model.NameSurname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Kullanıcı Adınız</label>
                        <input type="text" asp-for="@Model.Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">E-mail adresi</label>
                        <input type="text" asp-for="@Model.Mail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Yeni Parola</label>
                        <input type="password" asp-for="@Model.Password" class="form-control" />
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="flexCheckChecked" asp-for="@Model.ChangePassword">
                        <label for="flexCheckChecked">
                            Şifremi Değiştirmek istemiyorum
                        </label>
                    </div>

                    @*<div class="form-group">
                            <label for="exampleInputPassword5">Parolanızı Tekrar Giriniz</label>
                            @Html.Password("passwordAgain", "", new { @class = "form-control", @placeholder = "Yeni Şifrenizi Tekrar Giriniz" })
                            @Html.ValidationMessage("PasswordAgainMessage", "", new { @class = "text-danger" })
                        </div>*@
                    <div class="form-group">
                        <label>Yazar Resmi</label>
                        <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
                    </div>
                    @*<div class="form-group">
                                <label for="exampleInputCity1">Şehir</label>
                                @Html.DropDownListFor(x => x.WriterCity, (List<SelectListItem>)ViewBag.Cities, new { @class = "form-control dropdown" })
                        </div>*@
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        <input type="text" asp-for="@Model.About" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}
<div class="tech-btm">
    <p>Teknoloji, yazılım ve diğer bloglar... </p>
    <form method="post">
        <input type="email" id="SubscribeNewsLetterEmail" placeholder="E-mail adresinizi giriniz." required="" name="Mail">
        <input type="submit" id="btnSubscribe" value="Abone Ol">
    </form>
</div>

<script type="text/javascript">
    $("#btnSubscribe").click(function () {
        let values = {
            Mail: $("#SubscribeNewsLetterEmail").val()
        };
        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>

